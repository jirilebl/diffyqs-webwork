# Differential Equations: Laplace Transforms

## Institution(ASU)

##############################################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

##############################################################

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");
Context()->variables->are(
  s=>'Real',
  t=>'Real',
  X=>'Real'
);

$r1 = 0;
$r2= random(2,10,1);
$nr2=-$r2;
$b = $r2;
$y0 = non_zero_random(-4,8,1); 
$y1 = non_zero_random(-4,8,1); 
$d=$y1+$b*$y0;

$A=$d/$r2;
$B=$y0-$A;

$ans1 = Compute("s^2*X-$y0*s-$y1+$b*(s*X-$y0)");
$ans2 = Compute("($y0*s+$d)/(s^2+$b*s)");
$ans3 = Compute("$A/s");
$ans4 = Compute("$B/(s+$r2)");
$ans5 = Compute("$A+$B*exp($nr2*t)");

##############################################################

Context()->texStrings;
BEGIN_TEXT

