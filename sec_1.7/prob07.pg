TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");
Context()->variables->are(x=>'Real');

$a0 = Compute(.1 * random(0,5,1));
$a1 = $a0 + 0.25;
$a2 = $a0 + 0.5;
$a3 = $a0 + 0.75;
$a4 = $a0 + 1;



$b0 = Compute(random(1,9,1));
do {
  $c0 = Compute(0.5*random (1,5,1));
} while ($c0 == 1);
$c1 = 1/$c0**2;
$c2 = exp($a0*$c0)*($b0-$a0/$c0 +$c1);
$d0 = $a0-$c0*$b0;
$e0 = $b0 + $d0/4;
$f0 = $a1 -$c0*$e0;
$funct = Compute("x/$c0-$c1 + $c2*exp(-$c0*x)");
$functtex = "\frac{x}{$c0}-\frac{1}{{$c0}^2} + e^{$a0 \cdot $c0}\left($b0-\frac{$a0}{$c0} +\frac{1}{{$c0}^2}\right) e^{-$c0 x}";
$c3 = $a4/$c0-$c1 + $c2*exp(-$c0*$a4);

@ans =();

$b1 = $b0 + ($d0 + $f0)/8;
$d1 = $a1 - $c0*$b1;
$e1 = $b1 + $d1/4;
$f1 = $a2 - $c0*$e1;

$b2 = $b1 + ($d1 + $f1)/8;
$d2 = $a2 - $c0*$b2;
$e2 = $b2 + $d2/4;
$f2 = $a3 - $c0*$e2;


$b3 = $b2 + ($d2 + $f2)/8;
$d3 = $a3 - $c0*$b3;
$e3 = $b3 + $d3/4;
$f3 = $a4 - $c0*$e3;


$b4 = $b3 + ($d3 + $f3)/8;

