DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGML.pl",
  "PGcourse.pl"
);

##############################################################
	
TEXT(beginproblem());

Context("Numeric");
if (Context()->flags->get(num_points) < 50) {
  Context()->flags->set(num_points => 50);
}
if (Context()->flags->get(granularity) < 10000) {
  Context()->flags->set(granularity => 10000);
}
Context()->flags->set(tolType => "relative");
if (Context()->flags->get(tolerance) > 0.00001) {
  Context()->flags->set(tolerance => 0.00001);
}

$b = non_zero_random(-15,15,3);
$y0 = non_zero_random(-5,5,1);

$c = $b/3;

##############################################################

BEGIN_PGML
Find the function [:y(x):] that satisfies the differential equation 

>>[`` \frac{dy}{dx} - 2 x y = [$b] x^2 e^{x^2} ``]<<

and the condition [: y(0) = [$y0] :]. 

[`y(x)={}`]
[______]{"($c*x^3 + $y0)*e^(x^2)"}{50}
[@ AnswerFormatHelp("formulas") @]*
END_PGML

##############################################################

COMMENT("Integrating factor, initial value problem, easy integration");

