## KEYWORDS('ODE', 'ordinary', 'differential', 'system', 'equation', 'nonlinear', 'Jacobian matrix')

########################################################################

###########################
# Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl",
);
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

###########################
# Setup

Context("Matrix");

$a = random(2,10,1);
$b = random(2,10,1);
$c = random(2,10,1);

$funcx = Compute("$a * x^2 + $b * y^2 + $c*x*y");
$funcy = Compute("e^($a*x) + $b*y^2");

$jac = Compute("[[$a*2*x+$c*y,$b*2*y+$c*x],[$a*e^($a*x),$b*2*y]]");

###########################
# Main text

Context()->texStrings;
BEGIN_TEXT
Take the system \( x' = $funcx , \quad y' = $funcy \).
$PAR
The Jacobian matrix is
$PAR
\{ $jac->ans_array(20); \}
$BR
\{ AnswerFormatHelp("formulas") \}
\{ AnswerFormatHelp("matrices") \}
END_TEXT
Context()->normalStrings;

###########################
# Answer evaluation

ANS($jac->cmp);

###########################

COMMENT("Finding the Jacobian matrix for a nonlinear system of differential equations");

ENDDOCUMENT();
